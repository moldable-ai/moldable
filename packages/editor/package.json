{
  "name": "@moldable-ai/editor",
  "version": "0.1.3",
  "description": "Rich text markdown editor for Moldable applications",
  "author": "Desiderata LLC",
  "license": "Elastic-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/moldable-ai/moldable.git",
    "directory": "packages/editor"
  },
  "homepage": "https://moldable.sh",
  "bugs": {
    "url": "https://github.com/moldable-ai/moldable/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./styles": "./src/styles/index.css"
  },
  "files": [
    "dist",
    "src/styles",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@lexical/clipboard": "^0.39.0",
    "@lexical/code": "^0.39.0",
    "@lexical/extension": "^0.39.0",
    "@lexical/html": "^0.39.0",
    "@lexical/link": "^0.39.0",
    "@lexical/list": "^0.39.0",
    "@lexical/markdown": "^0.39.0",
    "@lexical/react": "^0.39.0",
    "@lexical/rich-text": "^0.39.0",
    "@lexical/selection": "^0.39.0",
    "@lexical/headless": "^0.39.0",
    "@lexical/utils": "^0.39.0",
    "lexical": "^0.39.0",
    "lucide-react": "^0.473.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@moldable-ai/eslint-config": "workspace:*",
    "@moldable-ai/prettier-config": "workspace:*",
    "@moldable-ai/typescript-config": "workspace:*",
    "@moldable-ai/ui": "workspace:^",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "jsdom": "^27.4.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@moldable-ai/ui": ">=0.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
