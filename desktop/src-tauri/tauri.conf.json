{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Moldable",
  "version": "0.1.11",
  "identifier": "com.moldable.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../scripts/lint-moldable-app.js": "",
      "../resources/app-template/": "app-template/",
      "resources/node/": "node/"
    },
    "externalBin": [
      "binaries/moldable-ai-server",
      "binaries/moldable-audio-capture"
    ],
    "macOS": {
      "entitlements": "entitlements.mac.plist",
      "infoPlist": "Info.plist",
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "digestAlgorithm": "sha256"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Moldable",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "trafficLightPosition": {
          "x": 14,
          "y": 19
        }
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; img-src 'self' data: blob: asset: https://asset.localhost http://asset.localhost https://raw.githubusercontent.com; connect-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:* https://*.anthropic.com https://*.openai.com ipc: http://ipc.localhost; frame-src 'self' http://localhost:* http://127.0.0.1:*;",
      "assetProtocol": {
        "enable": true,
        "scope": ["**", "$HOME/.moldable/**", "$HOME/moldable/**"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDOTJEMjk1RjQ2RTdDQjAKUldTd2ZHNzBsZEtTWEJCUGp3akhRRkY1TlhhRXRIZE10T29iSHV2bUtoNzhEbzFaTmJ6S0ZudFYK",
      "endpoints": [
        "https://github.com/moldable-ai/moldable/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
