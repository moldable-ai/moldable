{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Moldable",
  "version": "0.1.0",
  "identifier": "com.moldable.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/moldable-ai-server",
      "binaries/moldable-audio-capture"
    ],
    "macOS": {
      "entitlements": "entitlements.mac.plist",
      "infoPlist": "Info.plist"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Moldable",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "trafficLightPosition": { "x": 14, "y": 19 }
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; img-src 'self' data: blob: asset: https://asset.localhost http://asset.localhost; connect-src 'self' http://localhost:* http://127.0.0.1:* ws://localhost:* ws://127.0.0.1:* https://*.anthropic.com https://*.openai.com ipc: http://ipc.localhost;",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
