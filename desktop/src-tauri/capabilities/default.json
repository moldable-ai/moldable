{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for Moldable",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "core:path:default",
    "shell:allow-open",
    "shell:allow-execute",
    "shell:allow-spawn",
    "shell:allow-kill",
    "dialog:allow-open",
    "dialog:allow-save",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME/.moldable/**" },
        { "path": "$HOME/moldable/**" }
      ]
    },
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "updater:default",
    "process:default"
  ]
}
